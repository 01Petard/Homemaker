<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/information_linear_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/information_back"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/information_left_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="修改信息"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fafafa">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="头像"
            android:textSize="15sp" />

        <com.wjx.homemaker.view.XCRoundImageView
            android:id="@+id/information_img_userImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/textView3"
            android:src="@mipmap/ic_launcher" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/information_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/infor_rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fafafa">

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/tv_test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="姓名"
            android:textSize="15sp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:text="王晶旭"
            android:textColor="#000000"
            android:textSize="15sp"
            android:id="@+id/infor_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_test_name" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/information_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/infor_rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fafafa">

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/tv_test_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="电话"
            android:textSize="15sp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:text="18892621692"
            android:textColor="#000000"
            android:textSize="15sp"
            android:id="@+id/infor_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_test_phone" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/information_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/infor_rl_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fafafa">

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/tv_test_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="性别"
            android:textSize="15sp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:text="男"
            android:textColor="#000000"
            android:textSize="15sp"
            android:id="@+id/infor_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_test_sex" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/information_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/infor_rl_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fafafa">

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/tv_test_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="昵称"
            android:textSize="15sp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:text="空"
            android:textColor="#000000"
            android:textSize="15sp"
            android:id="@+id/infor_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_test_nickname" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/information_right" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/infor_rl_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fafafa">

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/tv_test_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="生日"
            android:textSize="15sp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:text="200年1月1日"
            android:textColor="#000000"
            android:textSize="15sp"
            android:id="@+id/infor_tv_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_test_birth" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/information_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/infor_rl_hobby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fafafa">

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/tv_test_hobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="兴趣"
            android:textSize="15sp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:text="足球"
            android:textColor="#000000"
            android:textSize="15sp"
            android:id="@+id/infor_tv_hobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_test_hobby" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/information_right" />
    </RelativeLayout>

    <Button
        android:id="@+id/infor_btn_updata"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:text="修改信息"
        android:textSize="20sp"
        android:background="#57c1fa"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>