<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/information_linear_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/information_back"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/information_left_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="实名认证"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ve_edt_name"
            android:drawableLeft="@mipmap/verified_name"
            android:drawablePadding="8dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="真实姓名"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_add_selector" />

        <EditText
            android:id="@+id/ve_edt_id"
            android:drawableLeft="@mipmap/ve_icon_id"
            android:drawablePadding="8dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="身份证号"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_add_selector" />


        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:text="手持身份证正面照片"
                android:layout_width="109dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ve_img_front"
                android:layout_marginLeft="90dp"
                android:src="@mipmap/icon_addpic_unfocused"
                android:layout_gravity="center_vertical"
                android:layout_width="90dp"
                android:layout_height="90dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:text="手持身份证反面照片"
                android:layout_width="109dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ve_img_behind"
                android:layout_marginLeft="90dp"
                android:src="@mipmap/icon_addpic_unfocused"
                android:layout_gravity="center_vertical"
                android:layout_width="90dp"
                android:layout_height="90dp" />

        </LinearLayout>

        <Button
            android:id="@+id/ve_btn_submit"
            android:textColor="#ffffff"
            android:layout_marginTop="15dp"
            android:text="上传认证"
            android:textSize="20sp"
            android:background="#57c1fa"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>