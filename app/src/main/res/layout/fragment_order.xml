<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/order_ll_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#57c1fa"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_empty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/order_tv_old"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:text="已完成"
                android:textColor="@drawable/order_tv_selector"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_tv_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="未完成"
                android:textStyle="bold"
                android:textColor="@drawable/order_tv_selector"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_tv_rob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:text="已抢单"
                android:textColor="@drawable/order_tv_selector"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_shape_circle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:scaleType="matrix"
            android:src="@drawable/shape_circle" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_title" />

</LinearLayout>