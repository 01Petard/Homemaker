<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card"
    android:id="@+id/linearLay">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_normal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_major"
        android:paddingRight="@dimen/spacing_major"
        >

        <TextView
            android:id="@+id/txt_business_name"
            style="@style/Txt.Main"
            android:text="订单标题"
            android:drawableRight="@drawable/ic_arrow_right"
            android:drawablePadding="@dimen/spacing_micro"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/txt_order_status"
            style="@style/Txt.Main"
            tools:text="已完成"
            android:text="已完成"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:background="@color/divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_major"
        >

        <com.wjx.homemaker.view.XCRoundImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/userphoto"
            android:src="@mipmap/userphoto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_total_price"
                style="@style/Txt.Emphasize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="￥59"
                android:text="￥59"/>
            <TextView
                style="@style/Txt.AuxiliaryInfo"
                android:layout_marginTop="2dp"
                android:id="@+id/username"
                android:text="发起用户"
                />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"

                android:layout_marginTop="2dp"
                android:text="地址"
                />



        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:background="@color/divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_major"
        android:gravity="center_vertical|right"
        >

        <TextView
            android:id="@+id/btn_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_major"
            android:layout_marginTop="@dimen/spacing_major"
            android:layout_marginBottom="@dimen/spacing_major"
            android:text="立即评价"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/txt_blue_btn"
            android:background="@drawable/selector_blue_border_button"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/btn_confirm_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_major"
            android:layout_marginTop="@dimen/spacing_major"
            android:layout_marginBottom="@dimen/spacing_major"
            android:text="确认送达"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/txt_blue_btn"
            android:background="@drawable/selector_blue_border_button"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/btn_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_major"
            android:layout_marginTop="@dimen/spacing_major"
            android:layout_marginBottom="@dimen/spacing_major"
            android:text="立即支付"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/txt_blue_btn"
            android:background="@drawable/selector_blue_border_button"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/btn_order_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_major"
            android:layout_marginTop="@dimen/spacing_major"
            android:layout_marginBottom="@dimen/spacing_major"
            android:text="取消订单"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/txt_blue_btn"
            android:background="@drawable/selector_blue_border_button"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/btn_order_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_major"
            android:layout_marginTop="@dimen/spacing_major"
            android:layout_marginBottom="@dimen/spacing_major"
            android:text="查看位置"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/txt_blue_btn"
            android:background="@drawable/selector_blue_border_button"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/btn_order_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_major"
            android:layout_marginTop="@dimen/spacing_major"
            android:layout_marginBottom="@dimen/spacing_major"
            android:text="购买完成"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/txt_blue_btn"
            android:background="@drawable/selector_blue_border_button"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/btn_order_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_major"
            android:layout_marginTop="@dimen/spacing_major"
            android:layout_marginBottom="@dimen/spacing_major"
            android:text="地址导航"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/txt_blue_btn"
            android:background="@drawable/selector_blue_border_button"
            android:visibility="gone"
            />


    </LinearLayout>


</LinearLayout>